<%- include("../partials/header.ejs") %>
<div class="max-w-md pt-5 mx-auto">
  <form action="/games/<%=game._id%>?_method=PUT" method="POST">
    <div class="grid grid-cols-1">
      <label class="block text-gray-700">Title:</label>
      <input class="block w-full rounded-md" type="text" name="title" value="<%=game.title%>"><br />
      <label class="block text-gray-700">Description:</label>
      <textarea rows="15" class="block rounded-md w-full" type="text" name="description"><%-game.description%></textarea><br>
      <label class="block text-gray-700">Tags:</label>
      <div class="flex max-w-md flex-wrap justify-start">
      <% tags.forEach(function(eachTag) { %>
        <div class="mr-3 flex items-center text-gray-700"><input type="checkbox" <% if (game.tag.some(function (gameTag) { %>
            <%return gameTag.equals(eachTag.id); %>
      <%  })) {%> checked <%}%> class="rounded my-2 mr-1"  name="tag" class="inline" value="<%=eachTag._id%>"><%=eachTag.content%></div>
      <% }) %>
    </div>
      <br>
      <div class="grid grid-cols-4">
        <button class="bg-[#fc773a] transition duration-150 ease-in-out hover:bg-[#ef654a] rounded text-white px-6 py-2 font-bold text-s focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#fc773a]">
          Submit
        </button>
      </div>
    </div>  
  </form>
</div>


<%- include("../partials/footer.ejs") %>
