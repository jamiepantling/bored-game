<%- include("../partials/header") %>
<div class="flex justify-center my-4">
  <a href="<%=user.id%>/collections/new"
    ><button
      class="mx-2 md:my-2 w-30 my:1 bg-indigo-800 transition duration-150 ease-in-out hover:bg-indigo-600 rounded text-white md:px-6 px-2 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 font-bold"
    >
      + Add collection
    </button></a
  >
</div>
<div class="p-3 mb-3">
  <% if (user.collections.length) { %>
  <h3 class="text-center text-lg leading-6 font-medium text-gray-900">
    Your collections:
  </h3>
  <ul class="flex flex-wrap gap-3 justify-center mb-3">
    <% collections.forEach(function(collection, idx) { %>
    <li class="">
      <div
        class="bg-white flex flex-col justify-between mx-auto my-4 py-2 px-3  shadow rounded"
      >
        <div class="">
          <div class="">
            <a class="font-bold" href="<%=user.id%>/collections/<%= collection.id%>">
              ðŸ“š <%= collection.title %><br><div class="text-right font-normal"><% if(collection.games.length>1||!collection.games.length) {%>
                <%=collection.games.length%> games
                <% } else { %>
                  1 game
                  <% } %>
                </div>
            </a>
          </div>
        </div>
      </div>
    </li>
    <%}) %>
  </ul>
  <% } %>
  <h3 class="text-center text-lg leading-6 font-medium text-gray-900">
    Games you added to the library:
  </h3>
  <ul class="flex flex-wrap gap-3 justify-center">
    <% games.forEach(function(game, idx) { %>
    <li class="collection-game-card">
      <div
        class="bg-white flex h-full flex-col justify-between mx-auto my-4 p-4 shadow rounded-lg"
      >
        <div class="mb-1">
          <div class="mb-2">
            <a class="font-bold font-title text-2xl" href="/games/<%= game.id%>">
              <%= game.title %>
            </a>
          </div>
          <div
            class="flex items-center justify-center text-center overflow-hidden"
          >
            <a class="font-bold" href="/games/<%= game.id%>"
              ><img class="collection-game-image" src="<%=game.picture%>"
            /></a>
          </div>
        </div>
        
      </div>
    </li>
    <%}) %>
  </ul>
</div>
<%- include("../partials/footer") %>
